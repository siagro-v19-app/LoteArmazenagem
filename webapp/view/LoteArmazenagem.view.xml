<mvc:View controllerName="br.com.idxtecLoteArmazenagem.controller.LoteArmazenagem"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	height="100%"
	width="100%">
	<App id="app">
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Lote de Armazenagem">
							<t:Table id="tableLote"
								rows="{path: '/LoteArmazenagems',
										parameters: {
											expand: 'LocalEstoqueDetails,
											ParceiroNegocioDetails,
											ProdutoDetails,
											TabelaTarifaDetails'
										}
									}"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Interactive"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Lotes"/> 
									</Toolbar> 
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="Descricao" sortProperty="Descricao" width="150px">
										<Label text="Descrição"/>
										<t:template>
											<Text text="{Descricao}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="LocalEstoqueDetails/Descricao"
										sortProperty="LocalEstoqueDetails/Descricao" width="300px">
										<Label text="Armazém"/>
										<t:template>
											<Text text="{LocalEstoqueDetails/Descricao}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="ParceiroNegocioDetails/RazaoSocial"
										sortProperty="ParceiroNegocioDetails/RazaoSocial" width="300px">
										<Label text="Cliente"/>
										<t:template>
											<Text text="{ParceiroNegocioDetails/RazaoSocial}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="TabelaTarifaDetails/Descricao"
										sortProperty="TabelaTarifaDetails/Descricao" width="150px">
										<Label text="Tabela"/>
										<t:template>
											<Text text="{TabelaTarifaDetails/Descricao}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Data" sortProperty="Data" width="100px">
										<Label text="Data"/>
										<t:template>
											<Text text="{
												path : 'Data',
												type : 'sap.ui.model.type.Date',
												formatOptions: {
													style : 'short'
												}}"
												wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="ProdutoDetails/Descricao"
										sortProperty="ProdutoDetails/Descricao" width="200px">
										<Label text="Produto"/>
										<t:template>
											<Text text="{ProdutoDetails/Descricao}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Saldo" sortProperty="Saldo" width="100px">
										<Label text="Saldo"/>
										<t:template>
											<Text text="{path: 'Saldo', 
												type: 'sap.ui.model.odata.type.Single',
			                            		formatOptions:{
			                            			decimals: 2,
			                                		decimalSeparator: ','
			                            		}}"
			                            		wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Encerrado" sortProperty="Encerrado" width="150px">
										<Label text="Encerrado"/>
										<t:template>
											<CheckBox selected="{Encerrado}" editable="false"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</Panel>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir novo" press="onIncluir"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditar"/>
						<Button icon="sap-icon://delete" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>